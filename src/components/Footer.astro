---
const navLinks = [
  { name: "Features", link: "/features" },
  { name: "Pricing", link: "/pricing" },
  { name: "Contact", link: "/contact" },
];
---

<footer class="bg-slate-900 text-white">
  <div
    class="mx-auto flex max-w-7xl flex-col items-center
           gap-8 px-6 py-10
           md:flex-row md:justify-between md:gap-0"
  >
    <!-- Left: Logo + Links -->
    <div
      class="flex flex-col items-center gap-6
             md:flex-row md:gap-10"
    >
      <!-- Logo -->
      <a href="/" aria-label="Home">
        <img src="/logo-bookmark-dark.svg" alt="Bookmark" class="h-8 w-auto" />
      </a>

      <!-- Links -->
      <nav
        class="flex flex-col items-center gap-4
                  md:flex-row md:gap-8"
      >
        {
          navLinks.map((item) => (
            <a
              href={item.link}
              class="text-sm uppercase tracking-wide
                   text-slate-300 hover:text-white transition"
            >
              {item.name}
            </a>
          ))
        }
      </nav>
    </div>

    <!-- Right: Social icons -->
    <div class="flex items-center gap-6">
      <a href="#" aria-label="Facebook">
        <img
          src="/icon-facebook.svg"
          alt=""
          class="h-6 w-6 opacity-80 hover:opacity-100 transition"
        />
      </a>

      <a href="#" aria-label="Twitter">
        <img
          src="/icon-twitter.svg"
          alt=""
          class="h-6 w-6 opacity-80 hover:opacity-100 transition"
        />
      </a>
    </div>
  </div>
</footer>
